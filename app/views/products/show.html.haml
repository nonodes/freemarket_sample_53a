.products-show-wrapper
  .products-show-main
    .products-name
      = @product.name
    - @product.images.first(1).each do|image|
      .products-images-photo
        - if @product.buyer_id.blank?
          - @product.images.first(1).each do |image|
            = image_tag image,size:"300x300",class: "top-products-img"
            -# =image_tag image ,size:"324x324"
        - else
          - @product.images.first(1).each do |image|
            =image_tag image ,size:"324x324"
            .try-bought
              %p.this-bought SOLD
        .products
